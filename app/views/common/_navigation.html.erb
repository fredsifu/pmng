<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand' do %>
       <i class="fa fa-rocket"></i> PMNG
    <% end %>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_user && current_user.is_admin? %>
          <li>
            <%= link_to new_member_path do %>
              <i class="fa fa-user-plus"></i> Add Members
            <% end %>
          </li>
          <li>
            <%= link_to edit_plan_path do %>
              <i class="fa fa-briefcase"></i> Change Plan
            <% end %>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to edit_user_registration_path, title: 'Edit Profile' do %>
              <i class="fa fa-user"></i> <%= truncate current_user.email, length: 25 %>
            <% end %>
          </li>
          <li><%= link_to 'Log out', destroy_user_session_path, title: 'Log out', method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path, title: 'Sign In' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
